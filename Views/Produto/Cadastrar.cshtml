@{
    ViewData["Title"] = "Cadastrar Produto";
}

<div class="text-center">
    <h1 class="display-4">Cadastrar Produto</h1>
</div>

<div class="container">
    <form method="post" asp-action="Cadastrar">
        <div class="form-group">
            <label for="CodigoProduto">Código do Produto (SKU)</label>
            <input type="text" class="form-control" id="CodigoProduto" name="CodigoProduto" placeholder="Código único do produto (SKU)" required />
        </div>

        <div class="form-group">
            <label for="Nome">Nome</label>
            <input type="text" class="form-control" id="Nome" name="Nome" placeholder="Nome do produto" required />
        </div>

        <div class="form-group">
            <label for="Descricao">Descrição</label>
            <input type="text" class="form-control" id="Descricao" name="Descricao" placeholder="Descrição do produto" />
        </div>

        <div class="form-group">
            <label for="Preco">Preço</label>
            <input type="number" step="0.01" class="form-control" id="Preco" name="Preco" placeholder="Preço do produto" required />
        </div>

        <div class="form-group">
            <label for="QuantidadeEstoque">Quantidade em Estoque</label>
            <input type="number" class="form-control" id="QuantidadeEstoque" name="QuantidadeEstoque" placeholder="Quantidade disponível no estoque" required />
        </div>

        <div class="form-group">
            <label for="Categoria">Categoria</label>
            <input type="text" class="form-control" id="Categoria" name="Categoria" placeholder="Categoria do produto" />
        </div>

        <button type="submit" class="btn btn-primary">Cadastrar</button>
    </form>
    <div class="mt-3">
        <a href="@Url.Action("Index")" class="btn btn-primary">Voltar</a>
    </div>
</div>
