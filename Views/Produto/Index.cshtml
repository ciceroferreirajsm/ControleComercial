@model IEnumerable<Produto>

@{
    ViewData["Title"] = "Lista de Produtos";
}

<div class="text-center">
    <h1 class="display-4">Lista de Produtos</h1>
</div>

<div class="container">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Descrição</th>
                <th>Preço</th>
                <th>Quantidade</th>
                <th>Categoria</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var produto in Model)
            {
                <tr>
                    <td>@produto.Id</td>
                    <td>@produto.Nome</td>
                    <td>@produto.Descricao</td>
                    <td>@produto.Preco.ToString("C")</td>  <!-- Formatação de preço como moeda -->
                    <td>@produto.QuantidadeEstoque</td>
                    <td>@produto.Categoria</td>
                    <td>
                        <!-- Adicionar links ou botões para editar ou excluir -->
                        <a href="@Url.Action("Editar", new { id = produto.Id })" class="btn btn-warning btn-sm">Editar</a>
                        <a href="@Url.Action("Excluir", new { id = produto.Id })" class="btn btn-danger btn-sm">Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <!-- Adicionar botão para cadastrar novo produto -->
    <div class="mt-3">
        <a href="@Url.Action("Cadastrar")" class="btn btn-primary">Cadastrar Novo Produto</a>
    </div>
</div>
